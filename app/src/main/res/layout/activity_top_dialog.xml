<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:padding="40dp">

    <TextView
        android:id="@+id/tv_top_normal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d5e5ed"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#444444"
        android:text="NormalTop"/>

    <TextView
        android:id="@+id/tv_top_custom_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="#d5e5ed"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#444444"
        android:text="CustomContent"/>

    <TextView
        android:id="@+id/tv_top_custom_message_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="#d5e5ed"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#444444"
        android:text="CustomMessageContent"/>

</LinearLayout>